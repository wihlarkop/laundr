---
import "../styles/global.css";
import { languages } from "../i18n/ui";

interface Props {
    title: string;
    lang?: string;
}

const { title, lang = "en" } = Astro.props;
---

<!doctype html>
<html lang={lang} class="h-full bg-slate-50">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body class="h-full text-slate-900 font-['Inter',sans-serif] antialiased">
        <div class="min-h-full flex flex-col pb-safe">
            <header
                class="bg-white border-b border-slate-200 sticky top-0 z-30 lg:static"
            >
                <!-- Single Row: Logo + Navigation + Language -->
                <div
                    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-14 sm:h-16 flex items-center justify-between"
                >
                    <div class="flex items-center gap-3 sm:gap-6">
                        <!-- Logo -->
                        <div class="flex items-center gap-2">
                            <img
                                src="/favicon-32x32.png"
                                alt="Loadr Logo"
                                width="32"
                                height="32"
                                class="w-8 h-8"
                                style="image-rendering: -webkit-optimize-contrast; image-rendering: crisp-edges;"
                            />
                        </div>

                        <!-- Navigation Tabs -->
                        <nav class="flex items-center gap-1 sm:gap-2 border-l border-slate-200 pl-3 sm:pl-6">
                            <a
                                href={`/${lang}`}
                                class={`px-3 sm:px-4 py-1.5 sm:py-2 text-xs sm:text-sm font-bold rounded-lg transition-all ${
                                    !Astro.url.pathname.includes("dictionary")
                                        ? "bg-blue-600 text-white"
                                        : "text-slate-500 hover:text-slate-700 hover:bg-slate-50"
                                }`}
                            >
                                {lang === "id" ? "Panduan" : "Guide"}
                            </a>
                            <a
                                href={`/${lang}/dictionary`}
                                class={`px-3 sm:px-4 py-1.5 sm:py-2 text-xs sm:text-sm font-bold rounded-lg transition-all ${
                                    Astro.url.pathname.includes("dictionary")
                                        ? "bg-blue-600 text-white"
                                        : "text-slate-500 hover:text-slate-700 hover:bg-slate-50"
                                }`}
                            >
                                {lang === "id" ? "Kamus" : "Dictionary"}
                            </a>
                        </nav>
                    </div>

                    <!-- Language Switcher -->
                    <div class="flex items-center gap-1 sm:gap-2">
                        {
                            Object.entries(languages).map(
                                ([code, label]) => {
                                    const isOnDictionary = Astro.url.pathname.includes("dictionary");
                                    const targetUrl = isOnDictionary ? `/${code}/dictionary` : `/${code}`;
                                    return (
                                        <a
                                            href={targetUrl}
                                            class={`text-[10px] sm:text-xs font-bold px-2 sm:px-3 py-1 sm:py-1.5 rounded-md transition-colors ${
                                                lang === code
                                                    ? "bg-slate-100 text-blue-600"
                                                    : "text-slate-400 hover:text-slate-600"
                                            }`}
                                        >
                                            {code.toUpperCase()}
                                        </a>
                                    );
                                },
                            )
                        }
                    </div>
                </div>

                <main class="grow flex flex-col">
                    <slot />
                </main>

                <footer class="bg-white border-t border-slate-200 py-8">
                    <div
                        class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col md:flex-row justify-between items-center gap-4"
                    >
                        <p class="text-sm text-slate-500">
                            {lang === "id" ? "Dibuat dengan" : "Built with"} Astro
                            & Tailwind. Icons by <a
                                href="https://github.com/tvler/laundry-symbols"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="text-blue-600 hover:underline">tvler</a
                            >.
                        </p>
                        <div class="flex gap-4">
                            <span class="text-xs text-slate-400"
                                >Â© 2026 Loadr</span
                            >
                        </div>
                    </div>
                </footer>
            </header>
        </div>
    </body>
</html>
